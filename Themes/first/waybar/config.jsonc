{
    "include": [
	  "$HOME/.config/waybar/Modules"
    ],
    "layer": "top",
    "height": 42,
    "reload_style_on_change": true,
    "modules-left": [
	"custom/power",
        "hyprland/workspaces",
        "mpris"
    ],
    "modules-center": [
	"custom/swaync",
        "clock",
        "privacy"
    ],
    "modules-right": [
        "tray",
	"wireplumber",
	"pulseaudio#microphone",
        "cpu",
        "memory",
	"temperature",
    ],
    "hyprland/workspaces": {
        "format": "{icon}",
        "on-click": "activate",
        "sort-by-number": true,
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
	"persistent-workspaces": {
		"*": 3
	},
        "format-icons": {
		"empty": "ÔÑå",
                "active": "ÔÜí",
                "default": "ÔÑë",
        },
    },
    "mpris": {
        "format": "{player_icon}  {title} - {artist}",
        "format-paused": "{status_icon}  {title} - {artist}",
        "max-length": 39,
        "dynamic-len": 10,
        "on-scroll-up": "playerctl volume 0.05+",
        "on-scroll-down": "playerctl volume 0.05-",
	"on-right-click": "playerctl next",
        "player-icons": {
            "default": "Û∞éà",
            "mpv": "ÔÖÑ",
            "vlc": "<span color='#E85E00'>Û∞ïº</span>",
            "spotify": "<span color='#1DB954'>ÔÜº</span>",
	    "firefox": "<span font='normal Font Awesome 6 Free' color='#ed7009'>üéß</span>"

      },
        "status-icons": {
            "paused": "‚è∏",
            "playing": "ÔÅã",
            "stopped": "ÔÅç"
         },
    },
    "custom/cava": {
	"exec": "$HOME/.config/hypr/scripts/audioBar.sh",
	"format": "{}"
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 12,
        "transition-duration": 250,
	"on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
	"on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 12
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 12
            }
        ]
    },
    "clock": {
        "interval": 1,
        "format": "ÔÅ≥ {:%d %b ~ %H:%M} ÔÄó ",
        "tooltip": true,
	"tooltip-format": "<span font='FiraCode 10' foreground='#FFD4E4'>{calendar}</span>",
	"on-click": "yad --calendar --undecorated --no-buttons --skip-taskbar"
    },
    "tray": {
        "icon-size": 20,
        "spacing": 13
    },
    "cpu": {
        "interval": 30,
        "format": "Ôãõ {load}%",
        "max-length": 10,
	"on-click": "btop"
    },
    "memory": {
        "interval": 10,
        "format": "{used:0.1f}G ÔáÄ",
        "format-alt": "{percentage}% ÔáÄ",
        "format-alt-click": "click",
        "tooltip": true,
        "tooltip-format": "{used:0.1f}GB/{total:0.1f}G",
    },
    "pulseaudio": {
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-muted": "Û∞ñÅ 0% {format_source}",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Û∞Çë",
            "headset": "Û∞Çë",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄß",
                "ÔÄ®"
            ]
        },
	"on-click": "pwvucontrol",
        "scroll-step": 5,
        "ignored-sinks": [
            "Easy Effects Sink"
        ],
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ± {volume}%"
    }
}
